@model InventoryApplication.ViewModel.UserLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>

    <div class="col-md-4 bg-primary rounded" style="margin:auto; margin-top:10%">
        <div style="padding:20%">
            <div style=""><h4 style="margin-left:5%; color:white">Inventory Application</h4></div>

            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username" class="control-label" style="color:ghostwhite"></label>
                            <input asp-for="Username" class="form-control" required/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label" style="color:ghostwhite"></label>
                            <input type="password" asp-for="Password" class="form-control" required/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-light" style="margin-left:40%" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/js/sweetalert2.all.min.js"></script>
@await Html.PartialAsync("_NotificationPartialView")
