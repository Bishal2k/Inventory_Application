@model InventoryApplication.ViewModel.ProductCreateViewModel

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

}
@section styling
{
    <style>
        #navigationProduct {
            background-color: silver;
            color: black;
        }
    </style>

}

@section header{
    <h3 class=" "> New Product</h3>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class=" " payedDate>Name</label>
                <input asp-for="Name" class="form-control " required oninvalid="this.setCustomValidity('Error')" oninput="this.setCustomValidity('')" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class=" " payedDate>Weight</label>
                <input asp-for="Weight" class="form-control " min="1" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
